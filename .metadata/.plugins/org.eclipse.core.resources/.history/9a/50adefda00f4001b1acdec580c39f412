
public class SortedSquare {
	public int[] sortedSquares(int[] nums) {
		//int [] anotherArray = new int[nums.length];
		for (int i = 0 ;i<nums.length;i++) {
			nums[i] = nums[i] *nums[i];
		}
		for(int i = 0;i<nums.length-1;i++) {
			int min = i;
			for(int j = i+1;j<nums.length;j++) {
				if(nums[min] > nums[j]) {
					min = j;
				}
			}
			int temp = nums[min];
			nums[min] = nums[i];
			nums[i] = temp;
		}
		
		return nums;
	}

	public static void main(String[] args) {
		SortedSquare sorted = new SortedSquare();
		
		int[] nums = {4,8,3,2,5,6,7};
		  int[] sortedSquares = sorted.sortedSquares(nums);
		 for(int i = 0;i<sortedSquares.length;i++) {
			 System.out.println(sortedSquares[i]);
		 }

		
		
		
		
	}

}
